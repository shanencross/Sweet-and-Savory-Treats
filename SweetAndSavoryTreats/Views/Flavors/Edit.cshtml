@{
  Layout = "_Layout";
}

@model SweetAndSavoryTreats.Models.Flavor

<h1>Edit Flavor: @Model.Name</h1>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  <input type="submit" value="Edit Flavor" />
}
<p>@Html.ActionLink("View This Flavor", "Details", new { id = Model.FlavorId } )<br>
@Html.ActionLink("View Flavors", "Index")<br>
@Html.ActionLink("Return to Home", "Index", "Home")</p>
