@{
  Layout = "_Layout";
}
@using SweetAndSavoryTreats.Models;
@using System.Collections.Generic;
@model SweetAndSavoryTreats.Models.Flavor;

<h1>@Model.Name</h1>

<h3>Treats</h3>
<ul>
  @foreach (FlavorTreat flavorTreat in Model.FlavorTreats)
  {
    Treat treat = flavorTreat.Treat;
    <li>@Html.ActionLink(treat.Name, "Details", "Flavors", new { id = treat.TreatId })</li>
  }
</ul>
<br>
<p>
@if (User.Identity.IsAuthenticated)
{
  @Html.ActionLink("Edit Flavor", "Edit")<br>
  @Html.ActionLink("Delete Flavor", "Delete")<br>
}
@Html.ActionLink("View Flavors", "Index")<br>
@Html.ActionLink("Return to Home", "Index", "Home")
</p>