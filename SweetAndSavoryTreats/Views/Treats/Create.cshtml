@{
  Layout = "_Layout";
}

@model SweetAndSavoryTreats.Models.Treat

<h4>Add a new Treat</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Price)
  <span>$</span>
  @Html.TextBoxFor(model => model.Price)
  <br>
  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")
  <br>
  <input type="submit" value="Add New Treat" />
}
<p>@Html.ActionLink("View Treats", "Index")<br>
@Html.ActionLink("Return to Home", "Index", "Home")</p>
